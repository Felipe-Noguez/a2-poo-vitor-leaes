package application;

import java.time.LocalDate;
import java.util.ArrayList;

public class Aluno extends Pessoa{
	
	private int matricula;
	private LocalDate dataMatricula;
	private double altura;
	private double peso;
	
	public Aluno(String nome, LocalDate dataNascimento, ArrayList<Telefone> telefones, ArrayList<Endereco> enderecos,
			int matricula, LocalDate dataMatricula, double altura, double peso) {
		super(nome, dataNascimento, telefones, enderecos);
		this.matricula = matricula;
		this.dataMatricula = dataMatricula;
		this.altura = altura;
		this.peso = peso;
	}

	public int getMatricula() {
		return matricula;
	}

	public void setMatricula(int matricula) {
		this.matricula = matricula;
	}

	public LocalDate getDataMatricula() {
		return dataMatricula;
	}

	public void setDataMatricula(LocalDate dataMatricula) {
		this.dataMatricula = dataMatricula;
	}

	public double getAltura() {
		return altura;
	}

	public void setAltura(double altura) {
		this.altura = altura;
	}

	public double getPeso() {
		return peso;
	}

	public void setPeso(double peso) {
		this.peso = peso;
	}	

}
